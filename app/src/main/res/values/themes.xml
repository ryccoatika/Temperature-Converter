<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TemperatureConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    // button number
    <style name="Widget.TemperatureConverter.Button.Circle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12pt</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TemperatureConverter.Button.Circle</item>
    </style>
    <style name="ShapeAppearance.TemperatureConverter.Button.Circle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    // result card
    <style name="Widget.TemperatureConverter.CardView.ResultItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TextAppearance.TemperatureConverter.CardView.ResultItem.Title" parent="">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="TextAppearance.TemperatureConverter.CardView.ResultItem.Body" parent="">
        <item name="android:textSize">15pt</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>